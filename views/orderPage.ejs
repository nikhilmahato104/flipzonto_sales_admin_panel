    }

    .product-card {
      display: flex;
      background: #f0fff0;
      border-radius: 12px;
      padding: 0.8rem;
      box-shadow: 0 0 6px rgba(0, 0, 0, 0.08);
      align-items: center;
    }

    .product-card img {
      width: 90px;
      height: 100px;
      object-fit: contain;
      border-radius: 8px;
      margin-right: 1rem;
      background: white;
      padding: 5px;
    }

    .product-details {
      flex-grow: 1;
    }

    .product-details h3 {
      margin: 0;
      font-size: 1rem;
      font-weight: bold;
      color: #333;
    }

    .product-details span,
    .product-details p {
      margin: 2px 0;
      font-size: 0.9rem;
    }

    .actions {
