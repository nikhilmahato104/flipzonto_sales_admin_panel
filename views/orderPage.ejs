      align-items: center;
      gap: 0.5rem;
      margin-top: 0.5rem;
    }

    .actions input[type="number"] {
      width: 50px;
      padding: 0.3rem;
      border-radius: 5px;
      border: 1px solid #ccc;
      text-align: center;
    }

    .actions button {
      background: #003087;
      color: white;
      border: none;
      padding: 0.4rem 0.7rem;
      border-radius: 8px;
      cursor: pointer;
    }

    .actions button:hover {
      background: #001f5c;
    }

    /* Out of stock button */
    .out-of-stock {
      background: red;
      color: white;
      cursor: not-allowed;
    }

